<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorOrange"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_home_logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_logo_top"
            android:gravity="center"
            android:padding="8dp"
            android:text="主页"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txt_home_statistics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_statistics_top"
            android:gravity="center"
            android:padding="8dp"
            android:text="统计"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/txt_home_chart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_chart_top"
            android:gravity="center"
            android:padding="8dp"
            android:text="图表"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/txt_home_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_me_top"
            android:gravity="center"
            android:padding="8dp"
            android:text="我的"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"/>


    </LinearLayout>

<!--    <View-->
<!--        android:id="@+id/div_tab_bar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="2px"-->
<!--        android:background="@color/colorGrayline"-->
<!--        android:layout_above="@id/ly_tab_bar"/>-->

    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ly_tab_bar" />

</RelativeLayout>